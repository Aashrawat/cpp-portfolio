<div class="card h-100 shadow-sm">

  <!-- Image -->
  <img
    src="<%= meal.imageUrl %>"
    class="card-img-top"
    style="height: 250px; object-fit: cover;"
    alt="<%= meal.title %>"
  >

  <!-- Card Body -->
  <div class="card-body">

    <!-- Title -->
    <h5 class="card-title">
      <%= meal.title %>
    </h5>

    <!-- Includes -->
    <p class="text-muted mb-1">
      <%= meal.includes %>
    </p>

    <!-- Description -->
    <p class="card-text">
      <%= meal.description %>
    </p>

    <!-- Cooking Time -->
    <p class="mb-1">
      <i class="bi bi-clock"></i>
      Cooking Time: <%= meal.cookingTime %> minutes
    </p>

    <!-- Servings -->
    <p class="mb-1">
      <i class="bi bi-people"></i>
      Servings: <%= meal.servings %>
    </p>

    <!-- Price -->
    <p class="fw-bold text-danger">
      $<%= meal.price %>
    </p>

  </div>

</div>
